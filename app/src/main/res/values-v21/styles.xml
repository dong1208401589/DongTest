<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--base themes-->
    <style name="AppTheme.ChinaWidthHelp.Start" parent="@android:style/Theme.Material">
        <item name="android:actionBarStyle">@style/ActionBar.Transparent.ChinaWidthHelp.Start</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorPrimaryDark">#435e7e</item>
        <item name="android:colorPrimary">#54759e</item>
    </style>

    <style name="AppTheme.ChinaWidthHelp" parent="@android:style/Theme.Material.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:itemTextAppearance">@style/ActionBar.Transparent.ChinaWidth.Item</item>
        <item name="android:listViewStyle">@style/AppTheme.ChinaWidthHelp.ListView</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/list_selector</item>
        <item name="android:editTextStyle">@style/AppTheme.ChinaWidthHelp.EditText</item>
        <item name="android:actionBarItemBackground">@drawable/bar_selector_style</item>
        <item name="android:colorPrimaryDark">#33000000</item>
        <item name="android:colorPrimary">#54759e</item>
        <item name="android:alertDialogStyle">@style/AppTheme.ChinaWidthHelp.Dialog.Alert</item>
        <item name="android:colorControlActivated">#4d83b3</item>
    </style>
    
    <style name="AppTheme.ChinaWidthHelp.Dialog.Alert" parent="android:style/Theme.Material.Light.Dialog.Alert">
        <item name="android:colorAccent">#4d83b3</item>
    </style>

    <!--action bar-->
    <style name="ActionBar.Transparent.ChinaWidthHelp.Start" parent="@android:style/Widget.Material.Light.ActionBar">
        <item name="android:background">#ff54759e</item>
        <item name="android:logo">@drawable/transparent</item>
        <item name="android:title">""</item>
    </style>

    <!--action bar item-->
    <style name="ActionBar.Transparent.ChinaWidth.Item" parent="android:TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--list view-->
    <style name="AppTheme.ChinaWidthHelp.ListView" parent="android:Widget.Material.ListView">
        <item name="android:fadingEdge">none</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">@color/divider</item>
    </style>

    <!--edit text-->
    <style name="AppTheme.ChinaWidthHelp.EditText" parent="android:Widget.Material.EditText">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>
